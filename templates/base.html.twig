<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Home{% endblock %}</title>
       
         
        {% block stylesheets %}
          <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="{{absolute_url(asset("/assets/css/bootstrap.min.css"))}}" >
        <link rel="stylesheet" href="{{absolute_url(asset("/assets/css/style.css"))}}">
        
        {% endblock %}
    </head>
    <body>
    {# va rechercher l'ensemble des messages flash mis dans les controllers #}
{# {% for label, messages in app.flashes %}
 
     <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
                       <div class="modal-body">
                            <div class="alert alert-{{label}} role="alert">
                            {% for message in messages %}
                                <p>{{message}}</p>
                            {% endfor %}
                        
                            </div>
                    
                     </div>
                </div>
            </div>
    </div>  
              
{% endfor %}
        <div class="container"> #}
        <nav class="navbar navbar-expand-lg">
        <span class="navbar-brand mb-0 h1 font-weight-light text-center text-white">PPAP</span>
        <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1">
        
   
                    <ul class="navbar-nav mr-auto  " role="navigation">
                        {% if app.user %}
                        <li class="nav-item text-white">
                            
                             <div class="mb-3 ">
                            <span class="material-icons">account_circle </span>
                                {{ app.user.username }}</div>
                        </li>
                        <li class="nav-item text-white">
                                <a href="{{ path('app_logout') }}"><span class="material-icons  text-danger">power_settings_new</span> Deconnexion</a>
                        </li>
                        
                        {% else %}
                        
                        <li class="nav-item active text-white">
                            <a target="_self" href="{{path('app_login')}}">
                                <span class="material-icons text-success">
                                        login
                                </span>Connexion
                            </a>
                        </li>
                        <li class="nav-item active text-white">
                            <a target="_self" href="{{path('app_register')}}" >
                            <span class="material-icons text-danger">
                            person_add
                            </span>
                                Enregistrement
                            </a>
                        </li>
                        {% endif %}
                    </ul>
        </div>
</nav>
        
        {% block body %}{% endblock %}

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" ></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" ></script>
        <script src="{{absolute_url(asset("../assets/js/bootstrap.min.js"))}}" ></script>
        <script src="{{absolute_url(asset("../assets/js/main.js"))}}"></script>
         
        {% block javascripts %}
        {% endblock %}
        
        </div>
    </body>
</html>
