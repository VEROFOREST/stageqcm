{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="m-5 align-self-center">
    <div class="card shadow-lg my-5 ">
        <div class="card-header">
            <h1 class="font-weight-light text-center py-3 text-white presentation">Accueil</h1>
        </div>
        <div class="card-body ">
        <div class="row">
            {% if is_granted("ROLE_PROF") %}
                
         
            <div class="col-md-3  offset-1">
              <a class="btn btn-primary btn-lg" href="{{ path('questionnaire_new', {'id': user.id})}}"> Créer un questionnaire</a>
              
            </div>
            
            <div class="col-md-3 offset-1">
               
                 <a  class="btn btn-primary btn-lg" href="{{ path('correction_new', {'id': user.id})}}" > Corriger</a>
            </div>
             {% endif %}

             {% if is_granted("ROLE_USER") %}

            <div class="col-md-4">
               
                <a  class="btn btn-primary btn-lg" href="{{ path('reponse_eleve_new', {'id': user.id})}}"> Répondre au questionnaire</a>
            </div>
       
            {% endif %}
        </div>
        <div class="row">
              {% if is_granted("ROLE_ADMIN") %}
            <div class="col-md-4">
            <button class="btn btn-primary btn-lg"> Administrateur</button>
            </div>
            {% endif %}
        </div>
    </div>
</div>
</div>
</div>


{% endblock %}
